extends ../shared/template

block content

  .account_status.meta
    ul
      li#show-sign-in Sign in
      li#show-registration Register

  form#sign-in.account-form--outer(action='/users/login' method='post' )
    .account-form--inner
      input(type='text' name='email' placeholder='name or email' autofocus=true)
      input(type='password' name='password' placeholder='password')
      button Sign In

  form#register.account-form--outer(action='/users' method='post')
    .account-form--inner
      input(type='text' name='name' placeholder='name')
      input(type='text' name='email' placeholder='email')
      input(type='password' name='password' placeholder='password')
      button Register

  .main--landing-page.meta
    .darth-vader
      h2 13 Virtues
      img.ben-franklin-2(src='/img/ben-franklin-2.svg')
    .teaser-text
      p.parchment--1
        blockquote
          span.quote "If you would not be forgotten,
          span.quote As soon as you are dead and rotten,
          span.quote Either write things worthy reading,
          span.quote Or do things worth the writing."
        span.quote - Benjamin Franklin
